#include <stdio.h>
#define SIZE_X 9
#define SIZE_Y 6

enum
{
	GO_RIGHT,
	GO_UP,
	GO_LEFT,
	GO_DOWN,
	MAX_GO,
};

int main()
{
	int arr[SIZE_X][SIZE_Y] = {0,};

	int iMax_X = SIZE_X;
	int iMax_Y = SIZE_Y;
	int iGo = GO_RIGHT;
	int iGoCount = 0;

	for(int i = (SIZE_X * SIZE_Y) - 1, x = 0, y = SIZE_Y - 1; i >= 0; --i)
	{
		++iGoCount;
		arr[x][y] = i;

		switch(iGo % MAX_GO)
		{
		case GO_RIGHT:
			{
				if(iGoCount == iMax_X)
				{
					++iGo;
					--y;
					--iMax_X;
					iGoCount = 0;
				}
				else
				{
					++x;
				}
			} break;
		case GO_UP:
			{
				if(iGoCount == iMax_Y - 1)
				{
					++iGo;
					--x;
					--iMax_Y;
					iGoCount = 0;
				}
				else
				{
					--y;
				}
			} break;
		case GO_LEFT:
			{
				if(iGoCount == iMax_X)
				{
					++iGo;
					++y;
					--iMax_X;
					iGoCount = 0;
				}
				else
				{
					--x;
				}
			} break;
		case GO_DOWN:
			{
				if(iGoCount == iMax_Y - 1)
				{
					++iGo;
					++x;
					--iMax_Y;
					iGoCount = 0;
				}
				else
				{
					++y;
				}
			} break;
		}
	}

	for(int y = 0; y < SIZE_Y; ++y)
	{
		for(int x = 0; x < SIZE_X; ++x)
		{
			printf("%d\t", arr[x][y]);
		}
		printf("\n\n");
	}
	return 0;
}
